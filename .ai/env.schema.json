{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "willisMD Environment Variables Schema",
  "type": "object",
  "properties": {
    "WILLISMD_DATA_DIR": {
      "type": "string",
      "description": "Path to the directory where user data is stored."
    },
    "WILLISMD_EXPORT_FORMATS": {
      "type": "string",
      "description": "Comma-separated list of enabled export formats (e.g., pdf,html,md)."
    },
    "NODE_ENV": {
      "type": "string",
      "enum": ["development", "production"],
      "description": "Node.js environment mode."
    }
  },
  "required": ["WILLISMD_DATA_DIR", "NODE_ENV"],
  "additionalProperties": true
}
